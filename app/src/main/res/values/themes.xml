<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Green" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#8e8e8e</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#ffffff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffd54f</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>


    <style name="Purple" parent="Green">
        <item name="colorPrimary">#ae52d4</item>
        <item name="colorPrimaryVariant">@color/purple_custom2</item>
        <item name="colorOnPrimary">@color/brown</item>
        <item name="android:textColor">#4a0072</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>

    </style>

    <style name="Green.Splash">
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="BottomNavigationViewTheme" parent="Widget.Design.BottomNavigationView">
        <item name="labelVisibilityMode">labeled</item>
        <item name="colorOnSurface">@color/cardview_dark_background</item>
        <item name="colorPrimarySurface">@color/color_gray</item>
        <item name="colorOnPrimarySurface">@color/green</item>
    </style>
</resources>